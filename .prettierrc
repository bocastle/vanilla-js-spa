{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 80,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "bracketSameLine": false,
  "htmlWhitespaceSensitivity": "css",
  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "printWidth": 200,
        "tabWidth": 2,
        "htmlWhitespaceSensitivity": "ignore",
        "singleQuote": false
      }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "singleQuote": false
      }
    },
    {
      "files": ["*.js", "*.ts"],
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "es5"
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "parser": "json"
      }
    },
    {
      "files": ["*.yaml", "*.yml"],
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "parser": "yaml"
      }
    },
    {
      "files": ["swagger.json", "swagger.yaml"],
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": false
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "proseWrap": "always"
      }
    }
  ]
}
